{
  "name": "pda-server",
  "version": "1.0.0",
  "description": "Server - PDA",
  "main": "app.js",
  "scripts": {
    "delete:log": "del log\\* /s /q",
    "delete:dist": "del dist\\* /s /q",
    "lint": "eslint src/**/*.ts",
    "nodemon:watch:js": "nodemon --watch dist --ext js ./dist/app.js",
    "compile:ts": "npm run delete:dist && npm run lint && tsc",
    "compile:prod:ts": "npm run delete:dist && npm run lint && tsc --project tsconfig.prod.json",
    "watch:ts": "watch \"npm run compile:ts\" src",
    "server:dev": "cross-env NODE_ENV=development && concurrently \"npm run watch:ts\" \"npm run nodemon:watch:js\"",
    "server:prod": "cross-env NODE_ENV=production && npm run compile:prod:ts && node ./dist/app.js"
  },
  "author": "FAMO",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-redis": "^4.0.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "helmet": "^3.21.2",
    "http-status": "^1.4.1",
    "moment": "^2.24.0",
    "node-windows": "^0.1.14",
    "redis": "^2.8.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "concurrently": "^5.0.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.2",
    "nodemon": "^2.0.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3",
    "watch": "^1.0.2"
  }
}
